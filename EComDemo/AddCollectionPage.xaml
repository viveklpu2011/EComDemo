<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EComDemo.AddCollectionPage" Title="Create a New Collection">
    <ContentPage.Content>
        <StackLayout Padding="20" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Entry FontSize="Medium" Placeholder="Collection Name"/>
            <Button CornerRadius="3" FontSize="Medium" TextColor="Black" BackgroundColor="#86f7f5" Text="Create Collection"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>